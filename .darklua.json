{
  "rules": [
    {
      "rule": "convert_require",

      "current": {
        "name": "path",

        "sources": {
          "@server": "./src/server",
          "@shared": "./src/shared",
          "@client": "./src/client",

          "@pkg": "./roblox_packages",

          "@kit": "./src/shared/kit",
          "@lifecycles": "./src/shared/lifecycles"
        }
      },

      "target": {
        "name": "roblox",
        "rojo_sourcemap": "./sourcemap.json",
        "indexing_style": "find_first_child"
      }
    }
  ]
}
